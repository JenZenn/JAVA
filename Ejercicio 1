package ejemplo;
import java.util.Scanner;
public class Ejemplo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
    
    //Programa que pide una hora por teclado y que muestre buenos dias, buenas tardes, buenas noches
    
    
		Scanner entrada = new Scanner (System.in);
		System.out.println("Intruduce una hora entre (0-23): ");
		System.out.print("=>");
		int hora = entrada.nextInt();
		
			
		if(hora >= 6 && hora <= 12) {
			System.out.println("Buenos días!!!");
		} else if (hora >= 13 && hora <= 20) {
			System.out.println("Buenas tardes!");
		} else if (hora >=21 && hora <24 || hora <=5 && hora >=0 ) {
			System.out.println("Buenas noches....zzz");
		}else {
			System.out.println("La hora ingresada no es válida.");
		}

		

	}

}
